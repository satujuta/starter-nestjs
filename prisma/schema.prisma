//Make CRUD Available
model Hotel {
  /// @HideField({ match: 'HotelCreate*Input' }) 
  id          Int       @id @default(autoincrement())
  /// @Validator.MinLength(2)
  /// @Validator.MaxLength(20)
  /// @Validator.IsAlphanumeric()
